{# Ecc12PRHomeBundle::base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% block subtitle %}Home{% endblock %} | Park Row{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="{">

    {% stylesheets
        "bundles/ecc12prhome/css/bootstrap.min.css"
        "bundles/ecc12prhome/css/font-awesome.css" filter="cssrewrite,yui_css"
        "bundles/ecc12prhome/css/theme.css" filter="cssrewrite,yui_css"
    %}
        <link rel="stylesheet" href="{{ app.request.scheme ~'://' ~ (random(7)+1) ~ '.cdn06.v.ecc12.com' ~ asset_url }}">
    {% endstylesheets %}

    <link rel="stylesheet" href='http://fonts.googleapis.com/css?family=Patua+One'>

    <!--[if lt IE 9]>
    {% stylesheets "bundles/ecc12prhome/css/font-awesome-ie7.css" filter="yui_css" %}
        <link rel="stylesheet" href="{{ app.request.scheme ~'://' ~ (random(7)+1) ~ '.cdn06.v.ecc12.com' ~ asset_url }}">
    {% endstylesheets %}
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {% block extra_css %}{% endblock %}
    {% block extra_head %}{% endblock %}

    <link rel="shortcut icon" href="favicon.ico">
</head>

<body>


<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <a class="brand" href="{{ url('index') }}">
            <i class="icon-home"></i> PR</a>
        <ul class="nav">
            <li><a href="{{ url('page', {'in_page_name': 'youth_ministry'}) }}">Student Ministry</a></li>
            <li><a href="{{ url('page', {'in_page_name': 'directions'}) }}">Directions</a></li>
            <li><a href="{{ url('page', {'in_page_name': 'calendar'}) }}">Calendar</a></li>
            <li><a href="{{ url('page', {'in_page_name': 'media'}) }}">Media</a></li>
            <li><a href="{{ url('directory') }}">Directory</a></li>
            {%  if is_granted('ROLE_USER') %}
                <li><a href="{{ url('logout') }}">Logout
                        {{ app.security.getToken().getUser().getUsername() }}</a></li>
            {% else %}
                <li><a href="{{ url('login') }}">Login</a></li>
            {% endif %}

        </ul>
    </div>
</div>

{% block showcase %}
    <div class="showcase">
        <div class="container">
            <div class="row">
                <div class="span12">
                    {% block showcasecontent %}
                        <header class="js-animated">
                            <img src="{{ asset('bundles/ecc12prhome/images/PR_Logo.png') }}" alt="">
                        </header>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block actionstrip %}
<section class="strip">
    <div class="container">
        <div class="row">
            <div class="span12">
                {% block actioncontent %}
                {% endblock %}
            </div>
        </div>
    </div>
</section>
{% endblock %}

<!-- Page Container -->
<div class="container">

{% block body %}


{% endblock %}

    <hr>

</div><!-- page /.container -->

<footer>
    <div class="container">
        <div class="row">
            <div class="span12">
                <p class="pull-right"><a href="#">Back to top</a></p>
                {% block footer %}
                    Copyright Â©2013. Park Row Church of Christ.<br />
                    <a href="https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=4MQ5TLUVMDQ24">
                        Donate with PayPal</a> |
                    <a href="http://parkrow.net/media-request/">Media Request</a> |
                    <a href="http://pr3.parkrow.net/pr3/user">Login</a> |
                    <a href="https://parkrow.fellowshipone.com/">DB</a> |
                    <a href="http://status.parkrow.net/">Status</a> |
                    <a href="http://cgi.parkrow.net/directory/directory.cgi">Office Tools</a> |
                    <a href="http://cam.parkrow.net:90/">Camera</a>
                {% endblock %}
            </div>
        </div>
    </div>
</footer>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="{{ asset('bundles/ecc12prhome/js/jquery-1.8.2.min.js') }}"><\/script>')</script>
<script src="{{ app.request.scheme ~'://' ~ (random(7)+1) ~ '.cdn06.v.ecc12.com' ~ asset('bundles/ecc12prhome/js/bootstrap.min.js') }}"></script>
<script>
    $(document).ready(function(){
        // fancy animation - fade out header content on page scroll
        $(window).scroll(function() {
            if ($(this).scrollTop() > 10) {
                $('.js-animated').stop().animate({opacity: 0}, 200);
            }
            if ($(this).scrollTop() < 10) {
                $('.js-animated').stop().animate({opacity: 1}, 500);
            }
        });
        //bootstrap tooltip trigger
        $('[rel="tooltip"]').tooltip();
    });
</script>

{% block pagebottom %}{% endblock %}

{% block extra_js %}{% endblock %}

</body>
</html>
